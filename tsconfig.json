{
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "lib": ["ES2022"],
        "module": "commonjs",
        "target": "ES2022",
        "declaration": true,
        "declarationDir": "./types",
        "baseUrl": "./"
    },
    "include": [
        "packages/**/*",
        "demo/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}