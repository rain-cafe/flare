{
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "Node16",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "strict": true,
        "declarationDir": "./types",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@rain/*": [
                "packages/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "packages/**/*",
        "demo/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}